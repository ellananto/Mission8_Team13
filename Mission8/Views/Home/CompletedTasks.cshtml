@{
    ViewData["Title"] = "Completed Tasks";
}

@model List<TaskFormResponse>

<style>
    .grid {
        display: table;
        border-spacing: 20px
    }

    .row {
        display: table-row
    }

    .cell {
        width: 400px;
        height: 400px;
        background: lightgreen;
        display: table-cell;
    }
</style>
<!DOCTYPE html>
<html>
<body>
    <center>
        <h1>Completed Tasks</h1>
        <div class="grid">
            <div class="row">
                <div class="cell">
                    <h3>Quadrant 1</h3>
                    <!--Make the table for quadrant 1 completed tasks only -->
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.Quadrant == 1)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="cell">
                    <h3>Quadrant 2</h3>
                    <!--Make the table for quadrant 2 completed tasks only -->
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.Quadrant == 2)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="cell">
                    <h3>Quadrant 3</h3>
                    <!--Make the table for quadrant 3 completed tasks only -->
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.Quadrant == 3)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="cell">
                    <h3>Quadrant 4</h3>
                    <!--Make the table for quadrant 4 completed tasks only -->
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.Quadrant == 4)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </center>
</body>
</html>
